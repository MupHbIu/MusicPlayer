<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notificationLayout"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="#000"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/notificationImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center|start"
        android:layout_weight="1"
        android:contentDescription="songImg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_play_circle_filled_24" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_weight="100"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notificationSong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:maxLines="2"
            android:singleLine="false"
            android:text="ssdfkjshdkljsdfhglkjsdfghlksdjfhgklsdflasjkdhflksadjhflajksdfhgkjskdlfghlsdfasldkjfhaslkdfhklasjdhflksjahfkjsahdflkjashflkjsahdfkljshdflkjasdfjshalkdjhfasflshafkjlfhaskjdfhlkjasdhflkjshdlfk"
            android:textColor="#fff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notificationAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="Author asdflkjashdfkjlashdklfjhskadfkjsahflsadljkfhlasjkhfkljasdfkjlsadhjklfhasfhlkjsadhflkashjklfhasdklfhsadlkjhfljkashfkjasdhlfkasd"
            android:textColor="#fff" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notificationButtonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/notificationPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/btn_notification_previous" />

        <ImageButton
            android:id="@+id/notificationPlayPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:background="#00000000"
            android:src="@drawable/btn_notification_play" />

        <ImageButton
            android:id="@+id/notificationNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:background="#00000000"
            android:src="@drawable/btn_notification_next" />

        <ImageButton
            android:id="@+id/notificationStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/btn_notification_stop" />
    </LinearLayout>
</LinearLayout>

